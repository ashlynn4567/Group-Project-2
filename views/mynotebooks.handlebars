<div></br></div>
{{#if notebooks.length}}
  <section>
    <h2>My Notebooks</h2>
    <div class="notebooks" id="user-notebooks">
      {{#each notebooks}}
        <article class="notebook">
          <a class="single-user-notebook" href="/mynotebooks/edit/{{id}}">
            <span>{{notebook_name}}</span>
          </a>
        </article>
      {{/each}}
    </div>
  </section>
{{/if}}

<section>
  <div class="form">
    <h3>Create New Notebook</h3>

    <form id="new-notebook-form">
      <label for="notebook-name" class="form-label">Name</label>
      <input
        type="text"
        name="notebook-name"
        class="form-input"
        placeholder="Enter Notebook Name"
      />

      <button type="submit" class="button">Create Notebook</button>
    </form>
  </div>
</section>

<script src="/javascript/add-notebook.js"></script>