<div class="form">
  <h3>Login</h3>
  <form id="login-form">
    <label for="email-login">Enter email address:</label>
    <input
      type="text"
      placeholder="Email Address"
      id="email-login"
      class="form-input"
    />

    <label for="password-login">Enter Password</label>
    <input
      type="password"
      placeholder="Password"
      id="password-login"
      class="form-input"
    />
    <button type="submit">
      Log In
    </button>
    </br>
    </br>
    <a type="button" class="link" href="/signup">Don't have an account?
      Sign up here!</a>
  </form>
</div>

<script src="/javascript/login.js"></script>